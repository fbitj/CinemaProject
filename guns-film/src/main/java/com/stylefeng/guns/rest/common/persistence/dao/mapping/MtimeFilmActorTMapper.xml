<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.rest.common.persistence.dao.MtimeFilmActorTMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.stylefeng.guns.rest.common.persistence.model.MtimeFilmActorT">
        <id column="UUID" property="uuid"/>
        <result column="film_id" property="filmId"/>
        <result column="actor_id" property="actorId"/>
        <result column="role_name" property="roleName"/>
    </resultMap>
    <select id="selectActorsByFilmId" resultType="com.guns.vo.ActorVO">
        SELECT a.actor_name as directorName, a.actor_img as imgAddress ,fa.role_name as roleName  from mtime_actor_t a
        LEFT JOIN  `mtime_film_actor_t` fa on a.uuid = fa.actor_id
        where film_id = #{filmId}
    </select>

</mapper>
